@model ViewModels.Models.DashboardViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="hero-section">
    <div class="hero-slider owl-carousel">
        
        @foreach (var item in Model.Carousels.Where(x=>x.SliderNo==1))
        {
            <div class="hero-item portfolio-item set-bg" data-setbg="@item.ThumbnailPath">
                <a href="Portfolio" class="hero-link">
                    <h2>Take a look at my Portfolio</h2>
                </a>
            </div>
        }

        
    </div>
    <div class="hero-slider owl-carousel">
        @foreach (var item in Model.Carousels.Where(x => x.SliderNo == 2))
         {
            <div class="hero-item portfolio-item set-bg" data-setbg="@item.ThumbnailPath">
                <a href="Portfolio" class="hero-link">
                    <h2>Take a look at my Portfolio</h2>
                </a>
            </div>
         }
    </div>
    <div class="hero-slider owl-carousel">
        @foreach (var item in Model.Carousels.Where(x => x.SliderNo == 3))
        {
        <div class="hero-item portfolio-item set-bg" data-setbg="@item.ThumbnailPath">
            <a href="Portfolio" class="hero-link">
                <h2>Take a look at my Portfolio</h2>
            </a>
        </div>}
        
    </div>
    <div class="hero-social-links">
        <a href="#"><i class="fa fa-pinterest"></i></a>
        <a href="#"><i class="fa fa-facebook"></i></a>
        <a href="#"><i class="fa fa-twitter"></i></a>
        <a href="#"><i class="fa fa-dribbble"></i></a>
        <a href="#"><i class="fa fa-behance"></i></a>
    </div>
</div>


<section class="intro-section">
    <div class="intro-warp">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-6 col-lg-7 p-0">
                    <div class="intro-text">
                        <h2>@Model.activeArtist.Headline</h2>
                        <p>@Model.activeArtist.Description</p>
                        <a href="/Home/Portfolio" class="sp-link">Take a look @@my portfolio</a>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-5 p-0">
                    <div class="skill-warp">
                        <div class="single-progress-item">
                            <div class="progress-bar-style" data-progress="75"></div>
                            <p>Nature</p>
                        </div>
                        <div class="single-progress-item">
                            <div class="progress-bar-style" data-progress="100"></div>
                            <p>Passion</p>
                        </div>
                        <div class="single-progress-item">
                            <div class="progress-bar-style" data-progress="90"></div>
                            <p>Portraits</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


